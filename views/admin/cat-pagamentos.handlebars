<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Categorias de Pagamentos</h2>
            </div>
            <div class="p-2">
                <a href="/admin/cad-cat-pagamento">
                    <button class="btn btn-outline-success btn-sm">
                        Cadastrar
                    </button>
                </a>
            </div>
        </div><hr>
        {{>_msg}}
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each catpagamentos.docs}}
                    <tr>
                        <td>{{nome}}</td>
                        <td class="text-center">
                            <span class="d-none d-md-block">
                                <a href="/admin/vis-cat-pagamento/{{_id}}" class="btn btn-outline-primary btn-sm">Visualizar</a>
                                <a href="/admin/edit-cat-pagamento/{{_id}}" class="btn btn-outline-warning btn-sm">Editar</a>
                                <a href="/admin/del-cat-pagamento/{{_id}}" class="btn btn-outline-danger btn-sm" data-confirm="Tem certeza de que deseja excluir o item o selecionando">Apagar</a>
                            </span>
                            <div class="dropdown d-block d-md-none">
                                <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Ações
                                </button>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                                    <a class="dropdown-item" href="/admin/vis-cat-pagamento/{{_id}}">Visualizar</a>
                                    <a class="dropdown-item" href="/admin/edit-cat-pagamento/{{_id}}">Editar</a>
                                    <a class="dropdown-item" href="/admin/del-cat-pagamento/{{_id}}" data-confirm="Tem certeza de que deseja excluir o item o selecionando">Apagar</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <nav aria-label="paginacao">
                <ul class="pagination pagination-sm justify-content-center">
                    {{#if catpagamentos.hasPrevPage}}
                    <li class="page-item">
                        <a class="page-link" href="/admin/cat-pagamentos?page=1" tabindex="-1">Primeira</a>
                    </li>
                    <li class="page-item"><a class="page-link" href="/admin/cat-pagamentos?page={{catpagamentos.prevPage}}">{{catpagamentos.prevPage}}</a></li>
                    {{else}}
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">Primeira</a>
                    </li>
                    {{/if}}

                    
                    <li class="page-item active">
                        <a class="page-link" href="#">{{catpagamentos.page}}</a>
                    </li>

                    {{#if catpagamentos.hasNextPage}}
                    <li class="page-item"><a class="page-link" href="/admin/cat-pagamentos?page={{catpagamentos.nextPage}}">{{catpagamentos.nextPage}}</a></li>
                    <li class="page-item">
                        <a class="page-link" href="/admin/cat-pagamentos?page={{catpagamentos.totalPages}}">Última</a>
                    </li>
                    {{else}}
                    <li class="page-item disabled">
                        <a class="page-link" href="#">Última</a>
                    </li>
                    {{/if}}
                    
                </ul>
            </nav>
        </div>
    </div>
</div>